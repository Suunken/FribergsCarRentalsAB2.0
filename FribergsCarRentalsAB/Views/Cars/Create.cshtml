@model FribergsCarRentalsAB.Models.Car

@{
    ViewData["Title"] = "Create";
}

<h1>Lägg till ny bil!</h1>

<hr />
<div class="row justify-content-center">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Brand" class="control-label">Märke</label>
                <input asp-for="Brand" class="form-control" />
                <span asp-validation-for="Brand" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Color" class="control-label">Färg</label>
                <input asp-for="Color" class="form-control" />
                <span asp-validation-for="Color" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Rentable" /> @Html.DisplayNameFor(model => model.Rentable)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="CarPicUrl1" class="control-label">Bild</label>
                <input asp-for="CarPicUrl1" class="form-control" />
                <span asp-validation-for="CarPicUrl1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CarPicUrl2" class="control-label">Bild</label>
                <input asp-for="CarPicUrl2" class="form-control" />
                <span asp-validation-for="CarPicUrl2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Skapa" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-controller="Admin">Tillbaka till Admin</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
